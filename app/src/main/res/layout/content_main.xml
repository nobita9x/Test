<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent"
    tools:context=".MyLockScreenActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnEnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable"
        android:layout_below="@+id/txt1"/>

    <Button
        android:id="@+id/btnDisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable"
        android:layout_below="@+id/btnEnable"/>

    <Button
        android:id="@+id/btnLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock"
        android:layout_below="@+id/btnDisable"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tgbtn_double_tap_to_lock_screen"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tgbtn_unlocked_quick_answer"
        android:layout_below="@+id/tgbtn_double_tap_to_lock_screen"
        android:layout_alignLeft="@+id/tgbtn_double_tap_to_lock_screen"
        android:layout_alignStart="@+id/tgbtn_double_tap_to_lock_screen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Double Tap to lock Screen"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tgbtn_double_tap_to_lock_screen"
        android:layout_toStartOf="@+id/tgbtn_double_tap_to_lock_screen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quick answer Homescreen"
        android:id="@+id/textView2"
        android:layout_below="@+id/tgbtn_double_tap_to_lock_screen"
        android:layout_toLeftOf="@+id/tgbtn_unlocked_quick_answer"
        android:layout_toStartOf="@+id/tgbtn_unlocked_quick_answer" />

</RelativeLayout>
